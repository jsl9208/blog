---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import getPostsByTag from "@/utils/getPostsByTag";
import { SITE } from "@/config";
import { getPostsByLang, t } from "@/i18n";

const ui = t("zh");

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = await getCollection("blog");
  const zhPosts = getPostsByLang(posts, "zh");
  const tags = getUniqueTags(zhPosts);

  return tags.flatMap(({ tag, tagName }) => {
    const tagPosts = getPostsByTag(zhPosts, tag);

    return paginate(tagPosts, {
      params: { tag },
      props: { tagName },
      pageSize: SITE.postPerPage,
    });
  });
}

const params = Astro.params;
const { tag } = params;
const { page, tagName } = Astro.props;
---

<Layout title={`${ui.tagPrefix} ${tagName} | ${SITE.title}`} lang="zh">
  <Header lang="zh" />
  <Main
    pageTitle={[`${ui.tagPrefix}`, `${tagName}`]}
    titleTransition={tag}
    pageDesc={ui.tagDesc(tagName)}
  >
    <h1 slot="title" transition:name={tag}>{`${ui.tagPrefix}${tag}`}</h1>
    <ul>
      {page.data.map(data => <Card {...data} />)}
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>
